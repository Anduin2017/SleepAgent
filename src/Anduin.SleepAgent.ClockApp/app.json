{
  "configVersion": "v3",
  "app": {
    "appId": 25977,
    "appName": "Sleep Agent",
    "appType": "app",
    "version": {
      "code": 1,
      "name": "1.0.1"
    },
    "icon": "icon.png",
    "vender": "zepp",
    "description": "A background service to monitor sleep data and HTTP Post to server"
  },
  "permissions": [
    "device:os.local_storage",
    "data:user.hd.sleep",
    "data:user.hd.heart_rate",
    "data:user.hd.spo2",
    "data:user.hd.calorie",
    "data:user.hd.distance",
    "data:user.hd.fat_burning",
    "data:user.hd.pai",
    "data:user.hd.stand",
    "data:user.hd.step",
    "data:user.hd.stress",
    "data:user.hd.sleep",
    "data:user.info",

    "data:os.device.info",

    "device:os.bg_service",
    "device:os.notification"
  ],
  "runtime": {
    "apiVersion": {
      "compatible": "3.0.0",
      "target": "3.0.0",
      "minVersion": "3.0"
    }
  },
  "targets": {
    "common": {
      "module": {
        "page": {
          "pages": [
            "page/index"
          ]
        },
        "app-side": {
          "path": "app-side/index"
        },
        "app-service": {
          "services": ["app-service/background_service"]
        }
      },
      "platforms": [
        {
          "st": "r",
          "dw": 480
        },
        {
          "st": "s",
          "dw": 390
        }
      ]
    }
  },
  "defaultLanguage": "en-US"
}
